pipeline {
    agent any
    environment {
       REGISTRY = "registry.diamol:5000"
    }
    stages {
        stage('Verify') {
            steps {
                sh 'docker version'
                sh 'docker-compose version'
            }
        }
        stage('Build') {
            steps {
                sh ./ci/01-build.bat
            }
        }
        stage('Test') {
            steps {
                sh ./ci/02-test.bat
            }
        }
        stage('Push') {
            steps {
                sh ./ci/03-push.bat
            }
        }
    }
}